{
  "hooks": {
    "before:init": ["npm run prepublishOnly", "npm run transform:private:off"],
    "before:npm:release": ["npm run transform:private:off", "cat package.json"],
    "before:npm:init": ["npm run transform:private:off", "cat package.json"],
    "after:release": ["npm run postpublish"]
  },
  "git": {
    "tag": true,
    "commit": true,
    "push": true,
    "requireUpstream": false,
    "requireCleanWorkingDir": false,
    "pushArgs": ["--follow-tags"],
    "releaseName": "v${version}",
    "commitMessage": "v${version}"
  },
  "github": {
    "release": false,
    "autoGenerate": true,
    "releaseName": "v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "ignoreVersion": true
  }
}
